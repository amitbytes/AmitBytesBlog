@model AmitBytesBlog.Admin.Models.SystemUserVM

<form asp-controller="Account" asp-action="Login" method="post" autocomplete="off">

    <div class="login-box-body bg-gray">
        @*<div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger alert-dismissible">

            </div>*@

        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible">
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-user"></i>
                </div>
                <input type="text" class="form-control" placeholder="Username" asp-for="UserName" autofocus />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </div>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-addon">
                    @*<img src="captcha" />*@
                    @Html.CaptchaImage()
                </div>
                <input type="text" class="form-control" placeholder="Enter captcha code" asp-for="Captcha" />
            </div>
            <span asp-validation-for="Captcha" class="text-danger"></span>
        </div>

    </div>
    <div class="login-box-footer text-center">
        <input type="submit" id="frmSubmit" class="btn btn-flat btn-success btn-block" value="Login" />
        <small class="text-muted">!! Unauthorized access is prohibited !!</small>
    </div>
</form>



